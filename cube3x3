<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
<script>
let scene, camera, renderer, cubeGroup;
let autoRotate = true;
let isAnimating = false;

const container = document.getElementById('cube-container');

const colors = {
  white: 0xffffff,
  yellow: 0xffff00,
  red: 0xff0000,
  orange: 0xff8800,
  blue: 0x0000ff,
  green: 0x00ff00
};

function init() {
  scene = new THREE.Scene();
  scene.background = new THREE.Color(0xf0f0f0);
  
  camera = new THREE.PerspectiveCamera(
    50,
    container.clientWidth / container.clientHeight,
    0.1,
    1000
  );
  camera.position.set(5, 5, 5);
  camera.lookAt(0, 0, 0);
  
  renderer = new THREE.WebGLRenderer({ antialias: true });
  renderer.setSize(container.clientWidth, container.clientHeight);
  container.appendChild(renderer.domElement);
  
  const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
  scene.add(ambientLight);
  
  const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
  directionalLight.position.set(10, 10, 10);
  scene.add(directionalLight);
  
  const pointLight = new THREE.PointLight(0xffffff, 0.5);
  pointLight.position.set(-10, -10, -10);
  scene.add(pointLight);
  
  createRubiksCube();
  
  window.addEventListener('resize', onWindowResize);
  
  let isDragging = false;
  let previousMousePosition = { x: 0, y: 0 };
  
  container.addEventListener('mousedown', (e) => {
    isDragging = true;
    autoRotate = false;
  });
  
  container.addEventListener('mousemove', (e) => {
    if (isDragging) {
      const deltaX = e.offsetX - previousMousePosition.x;
      const deltaY = e.offsetY - previousMousePosition.y;
      
      cubeGroup.rotation.y += deltaX * 0.01;
      cubeGroup.rotation.x += deltaY * 0.01;
    }
    
    previousMousePosition = { x: e.offsetX, y: e.offsetY };
  });
  
  container.addEventListener('mouseup', () => {
    isDragging = false;
  });
  
  container.addEventListener('mouseleave', () => {
    isDragging = false;
  });
  
  container.addEventListener('touchstart', (e) => {
    isDragging = true;
    autoRotate = false;
    previousMousePosition = {
      x: e.touches[0].clientX,
      y: e.touches[0].clientY
    };
  });
  
  container.addEventListener('touchmove', (e) => {
    if (isDragging) {
      const deltaX = e.touches[0].clientX - previousMousePosition.x;
      const deltaY = e.touches[0].clientY - previousMousePosition.y;
      
      cubeGroup.rotation.y += deltaX * 0.01;
      cubeGroup.rotation.x += deltaY * 0.01;
      
      previousMousePosition = {
        x: e.touches[0].clientX,
        y: e.touches[0].clientY
      };
    }
    e.preventDefault();
  });
  
  container.addEventListener('touchend', () => {
    isDragging = false;
  });
}

function createRubiksCube() {
  cubeGroup = new THREE.Group();
  
  const cubeSize = 0.95;
  const gap = 0.05;
  const geometry = new THREE.BoxGeometry(cubeSize, cubeSize, cubeSize);
  
  for (let x = -1; x <= 1; x++) {
    for (let y = -1; y <= 1; y++) {
      for (let z = -1; z <= 1; z++) {
        const materials = [
          new THREE.MeshStandardMaterial({ color: x === 1 ? colors.orange : 0x222222 }),
          new THREE.MeshStandardMaterial({ color: x === -1 ? colors.red : 0x222222 }),
          new THREE.MeshStandardMaterial({ color: y === 1 ? colors.white : 0x222222 }),
          new THREE.MeshStandardMaterial({ color: y === -1 ? colors.yellow : 0x222222 }),
          new THREE.MeshStandardMaterial({ color: z === 1 ? colors.green : 0x222222 }),
          new THREE.MeshStandardMaterial({ color: z === -1 ? colors.blue : 0x222222 })
        ];
        
        const cube = new THREE.Mesh(geometry, materials);
        cube.position.set(
          x * (cubeSize + gap),
          y * (cubeSize + gap),
          z * (cubeSize + gap)
        );
        
        const edges = new THREE.EdgesGeometry(geometry);
        const line = new THREE.LineSegments(
          edges,
          new THREE.LineBasicMaterial({ color: 0x000000, linewidth: 2 })
        );
        cube.add(line);
        
        cubeGroup.add(cube);
      }
    }
  }
  
  scene.add(cubeGroup);
}

function animate() {
  requestAnimationFrame(animate);
  
  if (autoRotate && !isAnimating) {
    cubeGroup.rotation.y += 0.005;
    cubeGroup.rotation.x += 0.002;
  }
  
  renderer.render(scene, camera);
}

function onWindowResize() {
  camera.aspect = container.clientWidth / container.clientHeight;
  camera.updateProjectionMatrix();
  renderer.setSize(container.clientWidth, container.clientHeight);
}

function resetCube() {
  const duration = 1000;
  const startRotation = {
    x: cubeGroup.rotation.x,
    y: cubeGroup.rotation.y,
    z: cubeGroup.rotation.z
  };
  const startTime = Date.now();
  
  function animateReset() {
    const elapsed = Date.now() - startTime;
    const progress = Math.min(elapsed / duration, 1);
    const easeProgress = 1 - Math.pow(1 - progress, 3);
    
    cubeGroup.rotation.x = startRotation.x * (1 - easeProgress);
    cubeGroup.rotation.y = startRotation.y * (1 - easeProgress);
    cubeGroup.rotation.z = startRotation.z * (1 - easeProgress);
    
    if (progress < 1) {
      requestAnimationFrame(animateReset);
    }
  }
  
  animateReset();
}

function scrambleCube() {
  const duration = 1500;
  const startRotation = {
    x: cubeGroup.rotation.x,
    y: cubeGroup.rotation.y,
    z: cubeGroup.rotation.z
  };
  const targetRotation = {
    x: Math.random() * Math.PI * 4 - Math.PI * 2,
    y: Math.random() * Math.PI * 4 - Math.PI * 2,
    z: Math.random() * Math.PI * 4 - Math.PI * 2
  };
  const startTime = Date.now();
  
  isAnimating = true;
  
  function animateScramble() {
    const elapsed = Date.now() - startTime;
    const progress = Math.min(elapsed / duration, 1);
    const easeProgress = progress < 0.5 
      ? 2 * progress * progress 
      : 1 - Math.pow(-2 * progress + 2, 2) / 2;
    
    cubeGroup.rotation.x = startRotation.x + (targetRotation.x - startRotation.x) * easeProgress;
    cubeGroup.rotation.y = startRotation.y + (targetRotation.y - startRotation.y) * easeProgress;
    cubeGroup.rotation.z = startRotation.z + (targetRotation.z - startRotation.z) * easeProgress;
    
    if (progress < 1) {
      requestAnimationFrame(animateScramble);
    } else {
      isAnimating = false;
    }
  }
  
  animateScramble();
}

function toggleAutoRotate() {
  autoRotate = !autoRotate;
}

function rotateFace(face) {
  if (isAnimating) {
    console.log('–ê–Ω—ñ–º–∞—Ü—ñ—è –≤–∂–µ –π–¥–µ, –∑–∞—á–µ–∫–∞–π—Ç–µ...');
    return;
  }
  
  console.log('–û–±–µ—Ä—Ç–∞—é –≥—Ä–∞–Ω—å:', face);
  isAnimating = true;
  autoRotate = false;
  
  const duration = 500;
  const startTime = Date.now();
  const angle = Math.PI / 2;
  
  const pivot = new THREE.Object3D();
  scene.add(pivot);
  
  const cubesToRotate = [];
  cubeGroup.children.forEach(child => {
    const pos = child.position;
    let shouldRotate = false;
    
    switch(face) {
      case 'F': shouldRotate = Math.abs(pos.z - 1) < 0.1; break;
      case 'B': shouldRotate = Math.abs(pos.z + 1) < 0.1; break;
      case 'U': shouldRotate = Math.abs(pos.y - 1) < 0.1; break;
      case 'D': shouldRotate = Math.abs(pos.y + 1) < 0.1; break;
      case 'L': shouldRotate = Math.abs(pos.x + 1) < 0.1; break;
      case 'R': shouldRotate = Math.abs(pos.x - 1) < 0.1; break;
    }
    
    if (shouldRotate) {
      cubesToRotate.push(child);
    }
  });
  
  console.log('–ó–Ω–∞–π–¥–µ–Ω–æ –∫—É–±–∏–∫—ñ–≤ –¥–ª—è –æ–±–µ—Ä—Ç–∞–Ω–Ω—è:', cubesToRotate.length);
  
  const initialPositions = [];
  const initialRotations = [];
  
  cubesToRotate.forEach(cube => {
    cubeGroup.remove(cube);
    
    initialPositions.push(cube.position.clone());
    initialRotations.push(cube.rotation.clone());
    
    pivot.add(cube);
  });
  
  function animateRotation() {
    const elapsed = Date.now() - startTime;
    const progress = Math.min(elapsed / duration, 1);
    const easeProgress = 1 - Math.pow(1 - progress, 3);
    
    const currentAngle = angle * easeProgress;
    
    pivot.rotation.set(0, 0, 0);
    
    switch(face) {
      case 'F': pivot.rotation.z = currentAngle; break;
      case 'B': pivot.rotation.z = -currentAngle; break;
      case 'U': pivot.rotation.y = currentAngle; break;
      case 'D': pivot.rotation.y = -currentAngle; break;
      case 'L': pivot.rotation.x = -currentAngle; break;
      case 'R': pivot.rotation.x = currentAngle; break;
    }
    
    if (progress < 1) {
      requestAnimationFrame(animateRotation);
    } else {
      pivot.updateMatrixWorld();
      
      cubesToRotate.forEach(cube => {
        const worldPos = new THREE.Vector3();
        const worldQuat = new THREE.Quaternion();
        
        cube.getWorldPosition(worldPos);
        cube.getWorldQuaternion(worldQuat);
        
        pivot.remove(cube);
        cubeGroup.add(cube);
        
        cube.position.copy(worldPos);
        cube.quaternion.copy(worldQuat);
      });
      
      scene.remove(pivot);
      isAnimating = false;
      console.log('–û–±–µ—Ä—Ç–∞–Ω–Ω—è –∑–∞–≤–µ—Ä—à–µ–Ω–æ!');
    }
  }
  
  animateRotation();
}

init();
animate();
</script>
</body>
</html>
